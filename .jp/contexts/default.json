{
  "persona_id": "default",
  "mcp_servers": [
    "local"
  ],
  "attachments": {
    "file_content": {
      "type": "file_content",
      "includes": [
        "/**/*.json",
        "/**/*.md",
        "/**/*.rs",
        "/**/*.toml",
        "/.jp"
      ],
      "excludes": [
        ".clippy.toml",
        ".rustfmt.toml",
        ".taplo.toml",
        ".typos.toml",
        "/**/target/**",
        "/.jp/conversations",
        "/rust-toolchain.toml"
      ]
    }
  }
}
